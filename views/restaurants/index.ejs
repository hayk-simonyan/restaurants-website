<%- include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To RestaurantWeb</h1>
            <p>View our hand-picked restaurants from all over the world</p>
            <p>
                <a class="btn btn-success btn-large" href="/restaurants/new">Add New Restaurant</a>
            </p>
        </div>
    </header>
    
    
    <div class="row text-center">
        <% restaurants.forEach(function(restaurant) { %>
            <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3 d-flex align-items-stretch">
                <div class="card mb-3">
                    <img class="card-img-top" src="<%= restaurant.image %>">
                    <div class="card-body d-flex flex-column p-1">
                        <h4 class="card-title"><%= restaurant.name %></h4>
                        <p class="mt-auto">
                            <a class="btn btn-primary" href="/restaurants/<%= restaurant._id %>">More Info</a>
                        </p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include ../partials/footer %>