<%- include ../partials/header %>

<div class="container">
    <div class="jumbotron text-center">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-lg-6">
                <h1 class="mb-5" style="text-align: center">Add new comment to <%= restaurant.name %></h1>
                
                <form action="/restaurants/<%= restaurant._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="text">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-large btn-success">Submit!</button>
                    </div>
                </form>
                
                <a href="/restaurants">Go Back</a>
                
            </div>
        </div>
    </div>
</div>

<%- include ../partials/footer %>